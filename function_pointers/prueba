#include <stdarg.h>
#include <string.h>
#include <stdio.h>

int print (const char *format, ...)
{
  const char *i;
  int c; 
  int s; 
  int num; 

  va_list(arg);
  va_start(arg, format);

  for (i = format; *i != '\0'; i++)
  {
    if (*i != '%')
    {
    putchar(*i); /** lo llamamos directo en el printf*/ 
    continue;;
    }
  
    if (*(i + 1) == "%" || *(i + 1) == "\0")
    // handle the double '%' or end of  format string
    {
      putchar('%');
      i++;
    }
    
void print_c (int c)
{
    if (*i == 'c') /** 
    {
      c = va_arg(arg, int);
      putchar(c);
    }
  }
 
  void print_s(*char)
  {
	int s;
  int num_args = strlen(*format);
  for(s = 0; s < num_args; s++)
  {
    putchar(s);    
  }
  } 
  /** print a string */
  

    putchar('0' + *str);
}

void print_d(int num)
{
    char* str = itoa(num,10);  // Convertir el número en una cadena de caracteres
    putchar('0' + *str);
}

    putchar('0' + *str);
}

void print_i(int num)
{
    char* str = itoa(num,10);  // Convertir el número en una cadena de caracteres
    putchar('0' + *str);
}

void print_lit%(char) /** prints a literal % */
{
	int i;

  	if (*i == '%' && *(i + 1) == 'i')
  {
    i++;
    putchar("%");
  }
}
  va_end(arg);
  return(0);
}
